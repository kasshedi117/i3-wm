# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
	color_good = "#2BB198"
       color_bad = "#586E75"
	color_degraded = "#DC355F"
	}

order += "cpu_usage"
# order += "load"
order += "disk /"
order += "disk /home"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery 1"
order += "tztime local"
 order += "ipv6"
 order += "run_watch DHCP"
 order += "run_watch VPN"

cpu_usage {
format = " Ôáæ  %usage "
}
load {
format = " load %1min "
# max_threshold = 0.3
}
disk "/" {
# format = " hdd %avail "
format = " ÔÇ† %avail "
}
disk "/home" {
format = " /home %avail "
}
wireless _first_ {
 format_up = "W: (%quality at %essid) %ip"
format_up = " Ôçú %essid %quality "
format_down = " no wlan "
}
battery 1 {
                   format = "%status %percentage %remaining %emptytime"
                   format_down = "No battery"
                   status_chr = "‚ö° CHR"
                   status_bat = "üîã BAT"
                   status_unk = "? UNK"
                   status_full = "‚òª FULL"
                   path = "/sys/class/power_supply/BAT%d/uevent"
                   low_threshold = 10
           }

ethernet _first_ {
# if you use %speed, i3status requires root privileges
format_up = " lan: %ip %speed "
format_down = " no lan "
}
tztime local {
format = " ÔÅ≥  %Y-%m-%d  ÔÄó %H:%M:%S "
#format = " %m.%d.%H:%M "
}

